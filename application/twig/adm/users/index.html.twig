{% extends 'adm/layout.html.twig' %}

{% block content %}

<div class="content-wrapper" id="vue-master">

	<section class="content-header">
		<div class="container-fluid">
			<div class="row mb-2">
				<div class="col-sm-6">
					<h4>{{ content_title }}</h4>
				</div>
				<div class="col-sm-6">
					<ol class="breadcrumb float-sm-right">
						<li class="breadcrumb-item">Home</li>
						<li class="breadcrumb-item">Master</li>
						<li class="breadcrumb-item"><a href="#">Pengguna</a></li>
					</ol>
				</div>
			</div>
		</div>
	</section>

	<!-- Main content -->
	<section class="content">
		<div class="container-fluid">
			<div class="row">

				<div class="col-md-12">

					

					<div class="card card-default">
						<div class="card-header">
							<h3 class="card-title">Data</h3>
						</div>
						<div class="card-body">
							
							<table id="master-table" class="table table-striped table-bordered" width="100%">
								<thead>
									<tr>
										<th class="fit-width">
											<input class="check-all-master" type="checkbox">
										</th>
										<th>
											Username
										</th>
										<th>
											Nama Lengkap
										</th>
									</tr>
								</thead>
							</table>
				
						</div>
						<div class="card-footer">

							{% if(check_roles('1')) %}
								<button class="btn btn-danger master-delete float-right" style="width: 10%;">
									Hapus
								</button>

								<a class="btn btn-success master-edit float-right" 
								href="{{ site_url('adm/users/edit/new') }}" style="width: 10%; margin-right:.5%">
									Tambah
								</a>
							{% endif %}

						</div>
					</div>

				</div>
				
			</div>
			<!-- /.row -->
		</div><!-- /.container-fluid -->
	</section>
	<!-- /.content -->

</div>

<div class="modal fade master-modal" id="modal-default">
	<div class="modal-dialog">
		<div class="modal-content master-modal-content">
			Loading...
		</div>
	</div>
</div>

{% endblock  %}

{% block add_javascript %}
{{ parent() }}


<script type="text/javascript" src="{{ assets_url('assets/js/app/master/users.js?') }}"></script>

<script type="text/javascript">
	window.MASTER.handleVueMaster();
</script>
{% endblock  %}