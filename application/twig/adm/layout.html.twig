         decimal3: function(total) {
              return Math.round(total * 1000) / 1000;
          },
          decimal2: function(total) {
              return Math.round(total * 100) / 100;
          },
          decimalSum: function(integer) {
              return Math.round((integer) * 1e12) / 1e12;
          },
          loader: function() {
              return $('.loader');
          },
          elLoader : '.app-loader',
          requestAjax: function(url, type, data, dataType, fn) {
              $.ajax({
